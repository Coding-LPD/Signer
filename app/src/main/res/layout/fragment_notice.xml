<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground">

    <!--navigation bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">

            <com.scnu.zhou.signer.ui.widget.segment.TwoStageSegment
                android:id="@+id/sg_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:left_title="课前"
                app:right_title="课后"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>

    </LinearLayout>
    <!--navigation bar end-->

    <com.scnu.zhou.signer.ui.widget.listview.PullToRefreshListView
        android:id="@+id/plv_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="51dp"
        android:divider="@null"
        android:scrollbars="none"/>

    <include layout="@layout/layout_no_network"/>
    <include layout="@layout/layout_no_notice"/>

</RelativeLayout>